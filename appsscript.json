{
  "timeZone": "Europe/London",
  "dependencies": {},
  "exceptionLogging": "STACKDRIVER",
  "runtimeVersion": "V8",
  "executionApi": {
    "access": "ANYONE"
  },
  "oauthScopes": [
    "https://www.googleapis.com/auth/spreadsheets.currentonly",
    "https://www.googleapis.com/auth/script.container.ui",
    "https://www.googleapis.com/auth/script.external_request",
    "https://www.googleapis.com/auth/userinfo.email",
    "https://www.googleapis.com/auth/drive.file"
  ],
  "webapp": {
    "access": "MYSELF",
    "executeAs": "USER_DEPLOYING"
  },
  "addOns": {
    "common": {
      "name": "Staff Rota Manager",
      "logoUrl": "https://via.placeholder.com/128x128/4285F4/FFFFFF?text=SRM",
      "useLocaleFromApp": true,
      "homepageTrigger": {
        "runFunction": "onHomepage",
        "enabled": true
      },
      "universalActions": [{
        "label": "Generate Monthly Rota",
        "runFunction": "showRotaGenerator"
      }]
    },
    "sheets": {
      "homepageTrigger": {
        "runFunction": "onHomepage",
        "enabled": true
      },
      "onFileScopeGrantedTrigger": {
        "runFunction": "onAuthorizationRequired"
      },
      "macros": [{
        "menuName": "Generate Monthly Rota", 
        "functionName": "showRotaGenerator",
        "defaultShortcut": "Ctrl+Alt+Shift+R"
      }]
    }
  }
} 